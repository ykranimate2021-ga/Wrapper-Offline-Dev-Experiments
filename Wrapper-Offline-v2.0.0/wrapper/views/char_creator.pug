        a.assettype#12(data-type="glasses" onclick="assettypechosen('glasses', '12')")
        //  img(src="/images/cc/assettype/glasses.png")
        a.assettype#13(data-type="facedecoration" onclick="assettypechosen('facedecoration', '13')")
        //  img(src="/images/cc/assettype/facedecoration.png")
  script. 
    var prevnum = "1";
    function assettypechosen(type, num) {
      if (prevnum !== num) {
        document.getElementById(num).setAttribute('class', 'assettype active');
        document.getElementById(prevnum).setAttribute('class', 'assettype');
        prevnum = num;
      }
    }