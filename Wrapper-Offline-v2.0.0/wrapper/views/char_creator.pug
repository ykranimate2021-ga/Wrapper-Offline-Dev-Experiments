        a.assettype#3(data-type="headshape" onclick="assettypechosen('headshape', '3')")
        //  img(src="/images/cc/assettype/headshape.png")
        a.assettype#4(data-type="hair" onclick="assettypechosen('hair', '4')")
        //  img(src="/images/cc/assettype/hair.png")
        a.assettype#5(data-type="beard" onclick="assettypechosen('beard', '5')")
        //  img(src="/images/cc/assettype/beard.png")
        a.assettype#6(data-type="mouth" onclick="assettypechosen('mouth', '6')")
        //  img(src="/images/cc/assettype/mouth.png")
        a.assettype#7(data-type="ear" onclick="assettypechosen('ear', '7')")
        //  img(src="/images/cc/assettype/ear.png")
        a.assettype#8(data-type="mustache" onclick="assettypechosen('mustache', '8')")
        //  img(src="/images/cc/assettype/mustache.png")
        a.assettype#9(data-type="eyes" onclick="assettypechosen('eyes', '9')")
        //  img(src="/images/cc/assettype/eyes.png")
        a.assettype#10(data-type="eyebrows" onclick="assettypechosen('eyebrows', '10')")
