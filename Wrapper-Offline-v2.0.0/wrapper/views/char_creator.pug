extends layout

block extrahead
  link(rel='stylesheet', href='/stylesheets/swf.css')
  link(rel='stylesheet', href='/stylesheets/cc.css')
  script= "var themeId='" + theme + "'; var id='" + id + "'"

block content
  main
    .cc
      .ccheader 
        a.back.button_small(href="/char/browse/" + theme)= "BACK" 
      .assettypelist
        a.assettype.active#1(data-type="shirt" onclick="assettypechosen('shirt', '1')")
        //  img(src="/images/cc/assettype/shirt.png")
        a.assettype#2(data-type="pants" onclick="assettypechosen('pants', '2')")
